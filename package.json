
{
  "name": "interprebot",
  "version": "1.0.0",
  "description": "Interprebot main project.",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install": "npm install --workspace=frontend && npm install --workspace=backend",
    "start:frontend": "npm start --workspace=frontend",
    "start:backend": "npm start --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "deploy": "npm run build:frontend && firebase deploy --only hosting"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}